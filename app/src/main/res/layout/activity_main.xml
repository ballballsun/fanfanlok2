<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memory Game Automator"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checking permissions..."
                android:textSize="16sp"
                android:textColor="#666666"
                android:padding="8dp"
                android:background="#f0f0f0"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Permissions Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required Permissions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_request_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Overlay Permission"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btn_request_accessibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Accessibility Service"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/btn_request_screen_capture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grant Screen Capture"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#FF9800" />

        </LinearLayout>

        <!-- Automation Control Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automation Control"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_start_automation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Automation"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginEnd="8dp"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btn_stop_automation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stop Automation"
                    android:backgroundTint="#F44336"
                    android:layout_marginStart="8dp"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btn_setting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Setting"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginEnd="8dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

        <!-- Debug Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debug Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_debug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading debug info..."
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="monospace"
                android:padding="12dp"
                android:background="#f8f8f8"
                android:textIsSelectable="true" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>