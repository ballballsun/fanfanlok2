<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FanFanLok Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Position Cache Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Position Cache Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Cache Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Position Caching"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switch_position_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cache card positions for faster subsequent detections"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Cache Status -->
        <TextView
            android:id="@+id/tv_cache_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cache Status"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Cache Statistics -->
        <TextView
            android:id="@+id/tv_cache_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cache Statistics"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Cache Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btn_clear_cache"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Cache"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_test_detection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Test Detection"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Recognition Settings Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Recognition Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Match Threshold -->
        <TextView
            android:id="@+id/tv_match_threshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match Threshold: 0.75"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seek_match_threshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Higher values = more strict matching (fewer false positives)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Card Back Threshold -->
        <TextView
            android:id="@+id/tv_back_threshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Back Threshold: 0.80"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seek_back_threshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Threshold for detecting face-down cards (card backs)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Performance Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Performance Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Performance Tips:\n\n• Enable position caching for 60-80% speed improvement\n• Lower thresholds = faster detection but more false positives\n• Higher thresholds = slower but more accurate detection\n• Clear cache if game layout changes\n• First automation run caches positions automatically"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Asset Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Template Setup"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📁 Required Assets:\n\nPlace your card templates in:\nassets/cards/\n\n• card_back.png (face-down card)\n• card_01.png, card_02.png, etc. (face-up cards)\n\n✅ Use clear, high-quality images\n✅ Crop templates to show only the card\n✅ Consistent image sizes work best"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:background="#F0F8FF"
            android:padding="12dp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</ScrollView>